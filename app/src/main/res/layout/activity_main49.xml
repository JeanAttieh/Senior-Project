<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity49">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="MECHANICS"
                android:textColor="#2C3E50"
                android:textStyle="bold"
                android:textSize="24dp" />

            <Button
                android:id="@+id/freeFalling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="free falling"
                android:background="@drawable/custom2"
                app:backgroundTint="@null"
                android:textColor="#2C3E50"/>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/angledProjectile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="angled projectile"
                android:background="@drawable/custom2"
                app:backgroundTint="@null"
                android:textColor="#2C3E50"/>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/slidingMotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sliding motion"
                android:background="@drawable/custom2"
                app:backgroundTint="@null"
                android:textColor="#2C3E50"/>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/attractiveForce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="attractive force"
                android:background="@drawable/custom2"
                app:backgroundTint="@null"
                android:textColor="#2C3E50"/>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textStyle="bold"
                android:text="THERMAL PHYSICS"
                android:textColor="#2C3E50"
                android:textSize="24dp" />

            <Button
                android:id="@+id/pressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="pressure"
                android:background="@drawable/custom2"
                app:backgroundTint="@null"
                android:textColor="#2C3E50" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/linearExpansion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="linear expansion"
                android:background="@drawable/custom2"
                app:backgroundTint="@null"
                android:textColor="#2C3E50" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/soundSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sound speed"
                android:background="@drawable/custom2"
                app:backgroundTint="@null"
                android:textColor="#2C3E50" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textStyle="bold"
                android:text="THEORY OF RELATIVITY"
                android:textColor="#2C3E50"
                android:textSize="24dp" />

            <Button
                android:id="@+id/relativisticMass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="relativistic mass"
                android:background="@drawable/custom2"
                app:backgroundTint="@null"
                android:textColor="#2C3E50" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/timeDilation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="time dilation"
                android:background="@drawable/custom2"
                app:backgroundTint="@null"
                android:textColor="#2C3E50" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>